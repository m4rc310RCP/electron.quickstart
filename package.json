{
  "name": "electron.quickstart",
  "version": "1.0.0",
  "description": "Projeto de referÃªncia - ELectron+ReactJs",
  "private": false,
  "main": "./src/electron/main.js",
  "build": {
    "productName": "MAppSales",
    "appId": "br.com.m4rc310.mapp",
    "files": [
      "dist/",
      "node_modules/",
      "src/**/*",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "scripts": {
    "start": "electron .",
    "w": "webpack --watch --config ./webpack.dev",
    "f": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "package": "webpack --config ./webpack.prod && electron-packager . MyApp --platform=darwin --arch=x64 --out=dist_app --overwrite"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m4rc310RCP/electron.quickstart.git"
  },
  "keywords": [
    "Electron",
    "React",
    "Webpack",
    "Quick",
    "Start"
  ],
  "author": "marcelo.utfpr@me.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/m4rc310RCP/electron.quickstart/issues"
  },
  "homepage": "https://github.com/m4rc310RCP/electron.quickstart#readme",
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "@electron/asar": "^3.2.8",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "dotenv-webpack": "^8.0.1",
    "electron": "^26.0.1",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "path": "^0.12.7",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "tailwindcss": "^3.3.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^8.1.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
